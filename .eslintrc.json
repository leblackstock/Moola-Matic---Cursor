// frontend/.eslintrc.json

{
  "extends": [
    // ... other extends ...
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    // ... other plugins ...
    "react",
    "prettier"
  ],
  "parser": "espree",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    // ... other rules ...
    "prettier/prettier": "error",
    "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
