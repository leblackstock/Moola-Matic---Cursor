// frontend/.eslintrc.json

{
  "extends": [
    // ... other extends ...
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    // ... other plugins ...
    "react",
    "prettier"
  ],
  "parser": "espree",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "ignorePattern": "/{[^{}]*}|[[^\\[\\]]*]/g"
      }
    ],
    "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
    "no-undef": ["error", { "typeof": true }]
  },
  "globals": {
    "process": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
